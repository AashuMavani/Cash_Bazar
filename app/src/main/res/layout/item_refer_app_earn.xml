    <RelativeLayout
        android:id="@+id/rlt_no"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/tvStepNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:fontFamily="@font/rubik_bold"
            android:includeFontPadding="false"
            android:textSize="@dimen/dim_15"
            android:layout_marginLeft="@dimen/dim_15"
            android:textColor="@color/black"
            android:layout_marginVertical="@dimen/dim_5"/>

        <ImageView
            android:id="@+id/ivInfo"
            android:layout_width="@dimen/dim_25"
            android:layout_height="@dimen/dim_25"
            android:layout_toRightOf="@id/tvStepNo"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_info" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/image"
        android:layout_width="@dimen/dim_60"
        android:layout_height="@dimen/dim_60"
        android:layout_below="@id/rlt_no"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_circule_blue">

