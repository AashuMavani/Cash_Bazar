<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr">

    <LinearLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_10"
        android:paddingVertical="@dimen/dim_5"
        android:layout_marginTop="@dimen/dim_5"
        android:layout_marginRight="@dimen/dim_10"
        android:layout_marginBottom="@dimen/dim_10"
        android:background="@drawable/ic_btn_gradient_rounded_corner_rect_new1"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/dim_56"
            android:layout_height="@dimen/dim_56"
            android:layout_margin="@dimen/dim_10"
            app:cardCornerRadius="@dimen/dim_10">

            <RelativeLayout
                android:layout_width="@dimen/dim_56"
                android:layout_height="@dimen/dim_56"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rectangle_white"
                android:elevation="@dimen/dim_2">

                <ProgressBar
                    android:id="@+id/probr"
                    android:layout_width="@dimen/dim_30"
                    android:layout_height="@dimen/dim_30"
                    android:layout_centerInParent="true"
                    android:theme="@style/Progressbar.Green" />

                <ImageView
                    android:id="@+id/ivIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/ivLottie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:visibility="invisible"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/rubik_medium"
                android:gravity="left"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:text="Medium Text"
                android:textColor="@color/black_font"
                android:textSize="@dimen/textSize_15" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_5"
                android:ellipsize="end"
                android:fontFamily="@font/rubik_regular"
                android:gravity="left"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:text="Medium Text"
                android:textColor="@color/black_font"
                android:textSize="@dimen/textSize_13" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/layoutTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                app:alignContent="flex_end"
                app:alignItems="flex_end"
                app:flexWrap="wrap" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginRight="@dimen/dim_10"
            android:background="@drawable/bg_accent_border"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="1dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dim_10"
                android:paddingRight="@dimen/dim_10">
<!--
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dim_34"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dim_5"
                    android:background="@null"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="Get"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_14" />-->

                <ImageView
                    android:layout_width="@dimen/dim_15"
                    android:layout_height="@dimen/dim_15"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dim_5"
                    android:src="@drawable/ic_coin_img" />

                <TextView
                    android:id="@+id/tvPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dim_34"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="20"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_14" />

              <!--  <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="@dimen/dim_15"
                    android:layout_height="@dimen/dim_15"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_coin_img" />-->



            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>