<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="ltr">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/header_bg_red">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="@dimen/dim_30"
                android:layout_height="@dimen/dim_30"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_back_img"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toLeftOf="@id/layoutPoints"
                android:layout_toRightOf="@id/iv_left"
                android:layout_weight="1"
                android:fontFamily="@font/rubik_medium"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/dim_20"
                android:text="Tasks"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_18"
                tools:ignore="MissingPrefix" />

            <LinearLayout
                android:id="@+id/layoutPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginRight="@dimen/dim_10"
                android:layout_toLeftOf="@id/ivHistory"
                android:background="@drawable/bg_wallet_balance_boarder"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dim_5"
                android:paddingTop="@dimen/dim_5"
                android:paddingRight="@dimen/dim_8"
                android:paddingBottom="@dimen/dim_5">

                <ImageView
                    android:layout_width="@dimen/dim_20"
                    android:layout_height="@dimen/dim_20"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_coin_img" />

                <TextView
                    android:id="@+id/tvPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dim_5"
                    android:text="100"
                    android:textColor="@color/black_font"
                    android:textSize="@dimen/textSize_16"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivHistory"
                android:layout_width="@dimen/dim_32"
                android:layout_height="@dimen/dim_32"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dim_15"
                android:padding="@dimen/dim_2"
                android:src="@drawable/ic_history" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/layoutData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/dim_5"
                android:layout_marginTop="@dimen/dim_15"
                android:visibility="gone">

                <com.reward.cashbazar.customviews.recyclerviewpager.Recycler_Pager_Small
                    android:id="@+id/rvSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    app:svp_runAuto="false"
                    app:svp_timeMillis="5000"
                    tools:listitem="@layout/item_home_slider_mini" />

            </RelativeLayout>

            <include
                android:id="@+id/layoutTopAds"
                layout="@layout/layout_up_banner_ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <WebView
                android:id="@+id/webNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:ignore="WebViewLayout" />

            <LinearLayout
                android:id="@+id/layoutOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_2"
                android:layout_marginBottom="@dimen/dim_10"
                android:background="@color/gray"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/layoutAllTasks"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_56"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lnr_all_task"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/bg_survey_selected"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/viewAllDot"
                            android:layout_width="@dimen/dim_10"
                            android:layout_height="@dimen/dim_10"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_btn_white_rounded_corner_rect_new"
                            android:backgroundTint="@color/white"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvAllTasks"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/dim_5"
                            android:fontFamily="@font/noto_extra_bold"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:paddingLeft="@dimen/dim_5"
                            android:text="All Tasks"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_14" />

                        <TextView
                            android:id="@+id/tvAllTasksCount"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dim_24"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:background="@drawable/circule_white"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/rubik_bold"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:minWidth="@dimen/dim_24"
                            android:text="0"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize_12"
                            android:visibility="visible" />

                    </LinearLayout>

                    <View
                        android:id="@+id/viewAll"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_5"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="@dimen/dim_5"
                        android:layout_marginRight="50dp"
                        android:layout_marginBottom="@dimen/dim_5"
                        android:background="@drawable/orange_bg_color"
                        android:backgroundTint="@color/white"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutHighestPayingTask"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_56"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/higest_task"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@color/gray"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/viewHighestPayingTaskDot"
                            android:layout_width="@dimen/dim_10"
                            android:layout_height="@dimen/dim_10"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_btn_white_rounded_corner_rect_new"
                            android:backgroundTint="@color/white"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/tvHighestPayingTask"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/noto_extra_bold"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:paddingLeft="@dimen/dim_5"
                            android:text="Top Paying Task"
                            android:textAllCaps="false"
                            android:textColor="#323131"
                            android:textSize="@dimen/textSize_14" />

                        <TextView
                            android:id="@+id/tvHighestPayingCount"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dim_24"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dim_5"
                            android:background="@drawable/circule_white"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/rubik_bold"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:minWidth="@dimen/dim_24"
                            android:text="0"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize_12"
                            android:visibility="visible" />

                    </LinearLayout>

                    <View
                        android:id="@+id/viewHighestPaying"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_5"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="@dimen/dim_5"
                        android:layout_marginRight="50dp"
                        android:layout_marginBottom="@dimen/dim_5"
                        android:background="@drawable/orange_bg_color"
                        android:backgroundTint="@color/white"
                        android:visibility="invisible" />

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutTodayStory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_15"
                android:layout_marginTop="@dimen/dim_5"
                android:layout_marginEnd="@dimen/dim_15"
                android:layout_marginBottom="@dimen/dim_5"
                android:background="@drawable/bg_task_page_horizantal"
                android:elevation="@dimen/dim_3"
                android:orientation="vertical"
                android:padding="@dimen/dim_10"
                android:scrollbars="none">


                <TextView
                    android:id="@+id/tvTodayStory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="left"
                    android:includeFontPadding="false"
                    android:text="Today's Story"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_15"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAdAppList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dim_5"
                    android:fadeScrollbars="true"
                    android:nestedScrollingEnabled="true"
                    android:orientation="horizontal"
                    android:scrollbarFadeDuration="1000"
                    android:scrollbarSize="@dimen/dim_3"
                    android:scrollbars="none"
                    tools:itemCount="4"
                    tools:listitem="@layout/item_horizontal_task_detail" />

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCategoryList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_5"
                android:layout_marginEnd="@dimen/dim_5"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTaskList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dim_5"
                android:layout_marginBottom="@dimen/dim_5"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_daily_task" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/ivLottieNoData"
                android:layout_width="@dimen/dim_240"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dim_15"
                android:adjustViewBounds="true"
                android:visibility="gone"
                app:lottie_autoPlay="false"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/no_data_animation"
                tools:ignore="MissingClass" />

            <LinearLayout
                android:id="@+id/layoutAds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/lblLoadingAds"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_240"
                    android:layout_marginLeft="@dimen/dim_15"
                    android:layout_marginTop="@dimen/dim_2"
                    android:layout_marginRight="@dimen/dim_15"
                    android:layout_marginBottom="@dimen/dim_15"
                    android:background="@drawable/rectangle_white"
                    android:elevation="@dimen/dim_3"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="Loading Ads..."
                    android:textColor="@color/grey_font"
                    android:textSize="@dimen/textSize_16" />

                <FrameLayout
                    android:id="@+id/fl_adplaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim_15"
                    android:layout_marginTop="@dimen/dim_2"
                    android:layout_marginRight="@dimen/dim_15"
                    android:layout_marginBottom="@dimen/dim_15"
                    android:background="@drawable/rectangle_white"
                    android:elevation="@dimen/dim_3" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</RelativeLayout>