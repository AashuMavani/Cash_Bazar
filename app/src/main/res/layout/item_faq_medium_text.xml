<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_sidemenu_social_white"
        android:layout_marginHorizontal="@dimen/dim_5"
        android:orientation="horizontal"
        android:padding="@dimen/dim_15">

        <TextView
            android:layout_width="@dimen/dim_20"
            android:layout_height="@dimen/dim_20"
            android:layout_marginRight="@dimen/dim_15"
            android:layout_marginLeft="@dimen/dim_15"
            android:background="@drawable/bg_label_red"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="A"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_14" />

        <TextView
            android:id="@+id/tvAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:ellipsize="end"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/rubik_regular"
            android:gravity="left"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/dim_1"
            android:lineSpacingMultiplier="1.2"
            android:letterSpacing="0.02"
            android:text="Medium Text"
            android:textColor="@color/black_font"
            android:textSize="@dimen/textSize_15" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_0_5"
        android:background="@color/border_grey" />
</LinearLayout>