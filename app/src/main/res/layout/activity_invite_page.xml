<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:layoutDirection="ltr">



    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/parentLottie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:lottie_autoPlay="false"
        app:lottie_loop="true" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/header_bg_red">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="@dimen/dim_30"
                android:layout_height="@dimen/dim_30"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_back_img"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/layoutPoints1"
                android:layout_toRightOf="@id/iv_left"
                android:fontFamily="@font/rubik_medium"
                android:layout_gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/dim_20"
                android:text="Refer &amp; Earn"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_18"
                tools:ignore="MissingPrefix" />

            <LinearLayout
                android:id="@+id/layoutPoints1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginRight="@dimen/dim_10"
                android:layout_toLeftOf="@id/ivHistory"
                android:background="@drawable/bg_wallet_balance_boarder"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dim_5"
                android:paddingTop="@dimen/dim_5"
                android:paddingRight="@dimen/dim_8"
                android:paddingBottom="@dimen/dim_5">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="@dimen/dim_20"
                    android:layout_height="@dimen/dim_20"
                    android:layout_gravity="center_vertical"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/coin" />

                <TextView
                    android:id="@+id/tvPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dim_5"
                    android:text="100"
                    android:textColor="@color/black_font"
                    android:textSize="@dimen/textSize_16"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>




            <ImageView
                android:id="@+id/ivHistory"
                android:layout_width="@dimen/dim_32"
                android:layout_height="@dimen/dim_32"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dim_15"
                android:padding="@dimen/dim_2"
                android:src="@drawable/ic_history" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>





    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:paddingBottom="@dimen/_5sdp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/layoutTopAds"
                layout="@layout/layout_up_banner_ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <WebView
                android:id="@+id/webNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:ignore="WebViewLayout" />

            <LinearLayout
                android:id="@+id/layoutInvite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/_5sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/dim_15"
                    android:layout_marginTop="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/img_gift"
                        android:layout_width="@dimen/_190sdp"
                        android:layout_height="180dp"
                        android:src="@drawable/user_refer"
                        android:layout_centerHorizontal="true"/>


                    <LinearLayout
                        android:visibility="visible"
                        android:id="@+id/layoutPoints"
                        android:layout_width="@dimen/_240sdp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/img_gift"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_15sdp"
                        android:background="@drawable/refer_screen_border">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvInviteNo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:text="0"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textSize_26"
                                app:fontFamily="@font/rubik_medium" />

                            <TextView
                                android:id="@+id/lblInviteNo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dim_10"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:text="Total Invite"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textSize_14"
                                app:fontFamily="@font/rubik_medium" />
                        </LinearLayout>

                        <View
                            android:id="@+id/viewSeparator"
                            android:layout_width="@dimen/dim_1"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dim_5"
                            android:layout_marginBottom="@dimen/dim_5"
                            android:background="@color/colorAccent" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/tvInviteIncome"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:text="0"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textSize_26"
                                app:fontFamily="@font/rubik_medium" />

                            <TextView
                                android:id="@+id/lblIncome"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dim_10"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:text="Income"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textSize_14"
                                app:fontFamily="@font/rubik_medium" />
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim_40"
                        android:layout_below="@+id/layoutPoints"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/dim_20"
                        android:layout_marginTop="@dimen/dim_20"
                        android:layout_marginHorizontal="@dimen/dim_15"
                        android:backgroundTint="@color/black"
                        android:background="@drawable/refer_code">

                        <TextView
                            android:id="@+id/tvInviteCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/rubik_medium"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:letterSpacing="0.09"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize_24"
                            android:visibility="visible" />
                        <ImageView
                            android:id="@+id/ivCopy"
                            android:layout_width="@dimen/dim_25"
                            android:layout_height="@dimen/dim_25"
                            android:src="@drawable/ic_copy_img"
                            android:layout_marginLeft="@dimen/dim_10"
                            android:layout_alignTop="@id/tvInviteCode"
                            android:layout_alignBottom="@id/tvInviteCode"
                            android:layout_toRightOf="@id/tvInviteCode"
                            app:tint="@color/black" />


                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutBtnInvite"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center">


                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="@dimen/dim_60"
                        android:layout_height="50sp"
                        android:layout_alignParentEnd="true"
                        android:adjustViewBounds="true"
                        android:elevation="@dimen/dim_2"
                        app:lottie_speed="2"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:lottie_rawRes="@raw/touch"/>

                    <RelativeLayout
                        android:layout_width="221dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_refer_btton"
                        android:gravity="center">

                        <!--                        android:background="@drawable/refer_screen_border"-->
                        <TextView
                            android:id="@+id/tvInvite"
                            android:layout_width="@dimen/_190sdp"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/rubik_medium"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:text="Refer &amp; Earn"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_20" />

                    </RelativeLayout>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRules"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtTitle"
                    android:layout_marginLeft="@dimen/dim_15"
                    android:layout_marginRight="@dimen/dim_15"
                    android:visibility="visible"/>

              <!--  <RelativeLayout
                    android:id="@+id/layoutBtnInvite"
                    android:layout_width="@dimen/_190sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center">


                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="@dimen/dim_60"
                        android:layout_height="50sp"
                        android:layout_alignParentEnd="true"
                        android:adjustViewBounds="true"
                        android:elevation="@dimen/dim_2"
                        app:lottie_speed="2"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:lottie_rawRes="@raw/touch"/>
                    <RelativeLayout
                        android:layout_width="@dimen/_190sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:gravity="center"
                        android:background="@drawable/refer_screen_border">

                        <TextView
                            android:id="@+id/tvInvite"
                            android:layout_width="@dimen/_190sdp"
