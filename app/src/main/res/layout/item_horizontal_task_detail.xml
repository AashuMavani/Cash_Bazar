<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr">

        <LinearLayout
            android:id="@+id/layoutContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dim_2"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_marginEnd="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_5"
            android:background="@drawable/bg_highlight_task_red_color"
            android:elevation="@dimen/dim_2"
            android:orientation="vertical" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_2"
                android:layout_marginTop="@dimen/dim_10"
                android:layout_marginEnd="@dimen/dim_10"
                android:layout_marginBottom="@dimen/dim_5"
                android:elevation="@dimen/dim_2"
                android:innerRadius="@dimen/dim_10"
                android:visibility="visible"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/dim_10">

                <LinearLayout
                    android:id="@+id/layoutParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_highlight_task_red_color"
                    android:backgroundTint="@color/background"
                    android:orientation="vertical"
                    android:padding="@dimen/dim_10">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dim_45"
                        android:layout_height="@dimen/dim_45"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="@dimen/dim_5"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:id="@+id/layoutIcon"
                            android:layout_width="@dimen/dim_45"
                            android:layout_height="@dimen/dim_45"
                            android:background="@drawable/bg_highlight_task_red_color"
                            android:backgroundTint="@color/background"
                            android:gravity="center">

                            <ProgressBar
                                android:id="@+id/probr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:theme="@style/Progressbar.Green" />

                            <ImageView
                                android:id="@+id/ivIcon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:elevation="@dimen/dim_2"
                                android:src="@mipmap/ic_launcher" />

                            <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/ivLottie"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:visibility="invisible"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dim_5"
                            android:layout_marginRight="@dimen/dim_5"
                            android:layout_marginTop="@dimen/dim_5"
                            android:clickable="false"
                            android:ellipsize="end"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:fontFamily="@font/rubik_medium"
                            android:includeFontPadding="false"
                            android:lines="1"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="Medium Text"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSize_12" />

                        <LinearLayout
                            android:id="@+id/layoutPoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginLeft="@dimen/dim_5"
                            android:layout_marginTop="@dimen/dim_5"
                            android:layout_marginRight="@dimen/dim_5"
                            android:background="@drawable/bg_task_category_blue"
                            android:backgroundTint="@color/colorPrimary"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_btn_rondede_courner_task_btn"
                                android:backgroundTint="@color/white"
                                android:elevation="0dp"
                                android:gravity="center">

                                <LinearLayout
                                    android:id="@+id/layoutPointsInner"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:background="@drawable/ic_btn_rondede_courner_task_btn"
                                    android:backgroundTint="#0D5B3391"
                                    android:elevation="0dp"
                                    android:gravity="center"
                                    android:paddingTop="@dimen/dim_2"
                                    android:paddingBottom="@dimen/dim_2"
                                    android:paddingLeft="@dimen/dim_10"
                                    android:paddingRight="@dimen/dim_10">

                                   <!-- <com.airbnb.lottie.LottieAnimationView
                                        android:layout_width="@dimen/dim_12"
                                        android:layout_height="@dimen/dim_15"
                                        app:lottie_autoPlay="true"
                                        app:lottie_loop="true"
                                        app:lottie_rawRes="@raw/coin" />-->

                                    <ImageView
                                        android:layout_width="12dp"
                                        android:layout_height="15dp"
                                        android:src="@drawable/ic_coin_img"/>

                                    <TextView
                                        android:id="@+id/tvPoints"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dim_5"
                                        android:fontFamily="@font/rubik_medium"
                                        android:includeFontPadding="false"
                                        android:maxLines="1"
                                        android:text="0"
                                        android:textColor="#3C3C3C"
                                        android:textSize="@dimen/textSize_14"
                                        android:visibility="visible" />
                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

