            <TextView
                android:id="@+id/tvLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginLeft="@dimen/dim_45"
                android:background="@drawable/bg_label_orange_color"
                android:clickable="false"
                android:elevation="@dimen/dim_2"
                android:ellipsize="end"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:paddingLeft="@dimen/dim_3"
                android:paddingTop="@dimen/dim_1"
                android:paddingRight="@dimen/dim_3"
                android:paddingBottom="@dimen/dim_1"
                android:text="Medium Text"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_10" />
        </FrameLayout>
    </FrameLayout>

</LinearLayout>