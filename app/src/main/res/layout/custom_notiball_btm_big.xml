<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_170"
        android:padding="@dimen/dim_5">

        <ImageView
            android:id="@+id/ivNotiImageBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingLeft="@dimen/dim_10"
            android:paddingRight="@dimen/dim_10"
            android:paddingTop="@dimen/dim_40"
            android:paddingBottom="@dimen/dim_10"
            android:background="@drawable/gradiant_bg_boarder"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNotiTitleBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/rubik_medium"
                android:gravity="left"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/textSize_16" />

            <TextView
                android:id="@+id/txtNotiDescBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dim_5"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="@dimen/dim_1"
                android:lineSpacingMultiplier="1.1"
                android:fontFamily="@font/rubik_medium"
                android:gravity="left"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_14"
                android:visibility="visible" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>