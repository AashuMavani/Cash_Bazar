<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dim_15">

        <TextView
            android:layout_width="@dimen/dim_20"
            android:layout_height="@dimen/dim_20"
            android:layout_marginRight="@dimen/dim_15"
            android:background="@drawable/bg_label_orange"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="Q"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_14" />


        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dim_10"
            android:layout_weight="1"
            android:clickable="false"
            android:ellipsize="end"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/rubik_medium"
            android:gravity="left"
            android:includeFontPadding="false"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="@dimen/dim_1"
            android:lineSpacingMultiplier="1.2"
            android:text="Medium Text"
            android:textColor="@color/black_font"
            android:textSize="@dimen/textSize_16" />

        <ImageView
            android:id="@+id/ivArrow"
            app:tint="@color/light_grey_font"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dim_25"
            android:layout_height="@dimen/dim_25"
            android:src="@drawable/ic_down_arrow_img" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_0_5"
        android:background="@color/border_grey" />
</LinearLayout>